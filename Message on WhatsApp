javascript:(function() {var selectedText = window.getSelection().toString().replace(/\D/g,'');var phoneNumber;if (selectedText) {phoneNumber = selectedText;} else {phoneNumber=prompt("Please, enter the phone number:");}if (phoneNumber) {var whatsappUrl=https://api.whatsapp.com/send/?phone=${encodeURIComponent('+55' + phoneNumber)}&text&type=phone_number&app_absent=0;var anchor=document.createElement('a');anchor.href=whatsappUrl;anchor.target='_blank';anchor.click();}})();
